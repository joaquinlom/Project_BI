<h1>Listing customers</h1>
<% if @customer.count <= 0 %>
<p class='text-danger'>No Clientes disponibles.</p><br>
<% else %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= link_to "#{customer.fullname}", customer_path(customer.customer_id) %></td>
        <td> <%= customer.phone %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer.customer_id) %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%end%>
<br>

<%= link_to 'New Customer', new_customer_path %>
