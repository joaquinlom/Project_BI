<h1>Listing items</h1>
<% if @items.count <= 0%>
<p class='text-danger'>No hay Items disponibles.</p><br>
<%else%>
<table>
  <thead>
    <tr>
      <th>Item ID</th>
      <th> Title</th>
      <th> Artist</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.item_id %></td>
        <td><%= item.title %></td>
        <td><%= item.artist %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%end%>
<br>

<%= link_to 'New Item', new_item_path %>
